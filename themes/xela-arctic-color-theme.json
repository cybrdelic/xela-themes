{
  "$schema": "vscode://schemas/color-theme",
  "name": "XELA Arctic â€” Crystal Light",
  "type": "light",
  "semanticHighlighting": true,
  "colors": {
    "editor.background": "#F8FAFB",
    "editor.foreground": "#2C3E50",
    "activityBar.background": "#FFFFFF",
    "sideBar.background": "#F3F6F8",
    "titleBar.activeBackground": "#FFFFFF",
    "statusBar.background": "#FFFFFF",
    "selection.background": "#2980B933",
    "focusBorder": "#2980B9AA",
    "editor.lineHighlightBackground": "#EDF3F7",
    "editor.selectionBackground": "#16A08522",
    "editorCursor.foreground": "#2980B9",
    "editorHoverWidget.background": "#FFFFFF",
    "editorHoverWidget.border": "#E5EDF2",
    "list.activeSelectionBackground": "#E8F1F7",
    "list.highlightForeground": "#2980B9",
    "terminal.ansiBlue": "#2980B9",
    "terminal.ansiGreen": "#27AE60"
  },
  "tokenColors": [
    { "scope": ["keyword"], "settings": { "foreground": "#2980B9", "fontStyle": "bold" } },
    { "scope": ["entity.name.function", "support.function"], "settings": { "foreground": "#16A085" } },
    { "scope": ["string"], "settings": { "foreground": "#27AE60" } },
    { "scope": ["entity.name.type", "support.type"], "settings": { "foreground": "#8E44AD" } },
    { "scope": ["constant.numeric"], "settings": { "foreground": "#E67E22" } },
  { "scope": ["comment"], "settings": { "foreground": "#95A5A6", "fontStyle": "italic" } },


  { "scope": ["markup.heading","entity.name.section","punctuation.definition.heading.markdown"], "settings": { "fontStyle": "bold" } },
  { "scope": ["heading.1.markdown","markup.heading.setext.1.markdown"], "settings": { "foreground": "#2980B9", "fontStyle": "bold" } },
  { "scope": ["heading.2.markdown","markup.heading.setext.2.markdown"], "settings": { "foreground": "#16A085", "fontStyle": "bold" } },
  { "scope": ["heading.3.markdown"], "settings": { "foreground": "#27AE60", "fontStyle": "bold" } },
  { "scope": ["heading.4.markdown"], "settings": { "foreground": "#8E44AD", "fontStyle": "bold" } },
  { "scope": ["heading.5.markdown"], "settings": { "foreground": "#E67E22", "fontStyle": "bold" } },
  { "scope": ["heading.6.markdown"], "settings": { "foreground": "#2C3E50", "fontStyle": "bold" } },


  { "scope": ["markup.bold","markup.bold.markdown"], "settings": { "foreground": "#2C3E50", "fontStyle": "bold" } },
  { "scope": ["punctuation.definition.bold.markdown"], "settings": { "foreground": "#2980B9" } },
  { "scope": ["markup.italic","markup.italic.markdown"], "settings": { "foreground": "#2C3E50", "fontStyle": "italic" } },
  { "scope": ["punctuation.definition.italic.markdown"], "settings": { "foreground": "#2980B988" } },
  { "scope": ["markup.strikethrough","markup.strike","markup.deleted"], "settings": { "fontStyle": "strikethrough", "foreground": "#8E44AD" } },


  { "scope": ["markup.underline.link","markup.underline.link.markdown","markup.link","meta.link","meta.link.inline","meta.link.reference"], "settings": { "foreground": "#2980B9", "fontStyle": "underline" } },
  { "scope": ["string.other.link.title.markdown"], "settings": { "foreground": "#2C3E50" } },
  { "scope": ["string.other.link.description.markdown"], "settings": { "foreground": "#8E44AD" } },
  { "scope": ["constant.other.reference.link.markdown"], "settings": { "foreground": "#95A5A6" } },


  { "scope": ["markup.inline.raw","markup.raw.inline","markup.inline.code","markup.inline.raw.string.markdown","markup.raw.inline.markdown"], "settings": { "foreground": "#2C3E50" } },
  { "scope": ["markup.fenced_code.block.markdown","markup.raw.block"], "settings": { "foreground": "#2C3E50" } },
  { "scope": ["punctuation.definition.raw.markdown","punctuation.definition.fenced.markdown"], "settings": { "foreground": "#E5EDF2" } },


  { "scope": ["markup.quote","markup.quote.markdown"], "settings": { "foreground": "#5D6D7E", "fontStyle": "italic" } },
  { "scope": ["punctuation.definition.quote.begin.markdown"], "settings": { "foreground": "#2980B9" } },


  { "scope": ["meta.separator.markdown"], "settings": { "foreground": "#E5EDF2" } },


  { "scope": ["markup.list","markup.list.numbered","markup.list.unnumbered"], "settings": { "foreground": "#2C3E50" } },
  { "scope": ["punctuation.definition.list.begin.markdown"], "settings": { "foreground": "#2980B9" } },


  { "scope": ["markup.table"], "settings": { "foreground": "#2C3E50" } },
  { "scope": ["markup.table.header"], "settings": { "foreground": "#2980B9", "fontStyle": "bold" } },
  { "scope": ["punctuation.definition.table.markdown","meta.table.separator.markdown"], "settings": { "foreground": "#E5EDF2" } },


  { "scope": ["meta.embedded.block.frontmatter","punctuation.definition.metadata.markdown"], "settings": { "foreground": "#95A5A6" } },


  { "scope": ["markup.inserted"], "settings": { "foreground": "#27AE60" } },
  { "scope": ["markup.deleted"], "settings": { "foreground": "#E74C3C" } },
  { "scope": ["markup.changed"], "settings": { "foreground": "#FFD166" } },


  { "scope": ["markup.input.checkbox"], "settings": { "foreground": "#2980B9" } },
  { "scope": ["meta.image.inline","meta.image.reference"], "settings": { "foreground": "#2980B9" } }
  ],
  "semanticTokenColors": {
    "function": "#16A085",
    "type": "#8E44AD",
    "string": "#27AE60",
    "number": "#E67E22",
    "keyword": "#2980B9"
  }
}
