{
  "$schema": "vscode://schemas/color-theme",
  "name": "XELA Monastic — Near‑Monochrome Focus",
  "type": "dark",
  "semanticHighlighting": true,
  "colors": {
    "focusBorder": "#A1A1AAAA",
    "selection.background": "#71717A33",

    "titleBar.activeBackground": "#0B0B0C",
    "titleBar.inactiveBackground": "#0B0B0C",
    "titleBar.activeForeground": "#E7E7EB",
    "titleBar.inactiveForeground": "#A1A1AA",
    "titleBar.border": "#17171A",

    "activityBar.background": "#0B0B0C",
    "activityBar.foreground": "#E7E7EB",
    "activityBar.activeBorder": "#A1A1AA",
    "activityBar.border": "#17171A",

    "sideBar.background": "#0B0B0C",
    "sideBar.foreground": "#E7E7EB",
    "sideBar.border": "#17171A",

    "statusBar.background": "#0B0B0C",
    "statusBar.foreground": "#E7E7EB",
    "statusBar.border": "#17171A",

    "panel.background": "#0B0B0C",
    "panel.border": "#17171A",

    "editorGroupHeader.tabsBackground": "#0B0B0C",
    "editorGroupHeader.tabsBorder": "#17171A",

    "tab.activeBackground": "#0B0B0C",
    "tab.inactiveBackground": "#0B0B0C",
    "tab.border": "#0B0B0C",
    "tab.activeForeground": "#E7E7EB",
    "tab.inactiveForeground": "#A1A1AA",
    "tab.activeBorderTop": "#A1A1AA",

    "editor.background": "#0B0B0C",
    "editor.foreground": "#E7E7EB",
    "editor.lineHighlightBackground": "#121214",
    "editor.selectionBackground": "#71717A33",
  "editorCursor.foreground": "#9CA3FF",

    "editorHoverWidget.background": "#0F0F10",
    "editorHoverWidget.border": "#1F1F22",
    "editorWidget.background": "#0F0F10",
    "editorWidget.border": "#1F1F22",

    "list.activeSelectionBackground": "#121214",
    "list.hoverBackground": "#141416",
    "list.focusBackground": "#121214",

  "button.background": "#C4C4CC",
  "button.hoverBackground": "#E5E7EB",
    "button.foreground": "#0B0B0C",
  "textLink.foreground": "#9CA3FF",

    "terminal.background": "#0B0B0C",
    "terminal.foreground": "#E7E7EB",
  "terminalCursor.foreground": "#9CA3FF",
  "terminal.ansiBlack": "#0B0B0C",
  "terminal.ansiRed": "#6B7280",
  "terminal.ansiGreen": "#9CA3AF",
  "terminal.ansiYellow": "#A1A1AA",
  "terminal.ansiBlue": "#C4C4CC",
  "terminal.ansiMagenta": "#D4D4D8",
  "terminal.ansiCyan": "#E5E7EB",
  "terminal.ansiWhite": "#E7E7EB",
  "terminal.ansiBrightBlack": "#3F3F46",
  "terminal.ansiBrightRed": "#8D8D95",
  "terminal.ansiBrightGreen": "#B4B4BB",
  "terminal.ansiBrightYellow": "#C4C4CC",
  "terminal.ansiBrightBlue": "#D4D4D8",
  "terminal.ansiBrightMagenta": "#E7E7EB",
  "terminal.ansiBrightCyan": "#F3F4F6",
  "terminal.ansiBrightWhite": "#FFFFFF"
  },
  "tokenColors": [
    { "scope": ["keyword"], "settings": { "foreground": "#C4C4CC", "fontStyle": "bold" } },
    { "scope": ["entity.name.function"], "settings": { "foreground": "#E7E7EB" } },
    { "scope": ["string"], "settings": { "foreground": "#D4D4D8" } },
    { "scope": ["constant.numeric"], "settings": { "foreground": "#B4B4BB" } },
  { "scope": ["comment"], "settings": { "foreground": "#8D8D95", "fontStyle": "italic" } },
  { "scope": ["markup.link", "string.quoted"], "settings": { "foreground": "#9CA3FF" } },
  { "scope": ["markup.heading","entity.name.section","punctuation.definition.heading.markdown"], "settings": { "fontStyle": "bold" } },
  { "scope": ["heading.1.markdown","markup.heading.setext.1.markdown"], "settings": { "foreground": "#E5E5E5", "fontStyle": "bold" } },
  { "scope": ["heading.2.markdown","markup.heading.setext.2.markdown"], "settings": { "foreground": "#CFCFCF", "fontStyle": "bold" } },
  { "scope": ["heading.3.markdown"], "settings": { "foreground": "#B8B8B8", "fontStyle": "bold" } },
  { "scope": ["heading.4.markdown"], "settings": { "foreground": "#A3A3A3", "fontStyle": "bold" } },
  { "scope": ["heading.5.markdown"], "settings": { "foreground": "#8F8F8F", "fontStyle": "bold" } },
  { "scope": ["heading.6.markdown"], "settings": { "foreground": "#7A7A7A", "fontStyle": "bold" } },
  { "scope": ["markup.bold","markup.bold.markdown"], "settings": { "foreground": "#E5E5E5", "fontStyle": "bold" } },
  { "scope": ["punctuation.definition.bold.markdown"], "settings": { "foreground": "#CFCFCF" } },
  { "scope": ["markup.italic","markup.italic.markdown"], "settings": { "foreground": "#E5E5E5", "fontStyle": "italic" } },
  { "scope": ["punctuation.definition.italic.markdown"], "settings": { "foreground": "#7A7A7A" } },
  { "scope": ["markup.strikethrough","markup.strike","markup.deleted"], "settings": { "fontStyle": "strikethrough", "foreground": "#9A9A9A" } },
  { "scope": ["markup.underline.link","markup.underline.link.markdown","markup.link","meta.link","meta.link.inline","meta.link.reference"], "settings": { "foreground": "#9CA3FF", "fontStyle": "underline" } },
  { "scope": ["string.other.link.title.markdown"], "settings": { "foreground": "#E5E5E5" } },
  { "scope": ["string.other.link.description.markdown"], "settings": { "foreground": "#B8B8B8" } },
  { "scope": ["constant.other.reference.link.markdown"], "settings": { "foreground": "#7A7A7A" } },
  { "scope": ["markup.inline.raw","markup.raw.inline","markup.inline.code","markup.inline.raw.string.markdown","markup.raw.inline.markdown"], "settings": { "foreground": "#E5E5E5" } },
  { "scope": ["markup.fenced_code.block.markdown","markup.raw.block"], "settings": { "foreground": "#E5E5E5" } },
  { "scope": ["punctuation.definition.raw.markdown","punctuation.definition.fenced.markdown"], "settings": { "foreground": "#3F3F46" } },
  { "scope": ["markup.quote","markup.quote.markdown"], "settings": { "foreground": "#A1A1AA", "fontStyle": "italic" } },
  { "scope": ["punctuation.definition.quote.begin.markdown"], "settings": { "foreground": "#C4C4CC" } },
  { "scope": ["meta.separator.markdown"], "settings": { "foreground": "#3F3F46" } },
  { "scope": ["markup.list","markup.list.numbered","markup.list.unnumbered"], "settings": { "foreground": "#E5E5E5" } },
  { "scope": ["punctuation.definition.list.begin.markdown"], "settings": { "foreground": "#CFCFCF" } },
  { "scope": ["markup.table"], "settings": { "foreground": "#E5E5E5" } },
  { "scope": ["markup.table.header"], "settings": { "foreground": "#CFCFCF", "fontStyle": "bold" } },
  { "scope": ["punctuation.definition.table.markdown","meta.table.separator.markdown"], "settings": { "foreground": "#3F3F46" } },
  { "scope": ["meta.embedded.block.frontmatter","punctuation.definition.metadata.markdown"], "settings": { "foreground": "#8D8D95" } },
  { "scope": ["markup.inserted"], "settings": { "foreground": "#B8B8B8" } },
  { "scope": ["markup.deleted"], "settings": { "foreground": "#9A9A9A" } },
  { "scope": ["markup.changed"], "settings": { "foreground": "#CFCFCF" } },
  { "scope": ["markup.input.checkbox"], "settings": { "foreground": "#CFCFCF" } },
  { "scope": ["meta.image.inline","meta.image.reference"], "settings": { "foreground": "#CFCFCF" } }
  ],
  "semanticTokenColors": {
    "function": "#E7E7EB",
    "string": "#D4D4D8",
    "number": "#B4B4BB",
    "keyword": "#C4C4CC",
  "type": "#D4D4D8",
  "enumMember": "#C4C4CC",
  "property": "#E7E7EB",
  "parameter": "#D4D4D8"
  }
}
